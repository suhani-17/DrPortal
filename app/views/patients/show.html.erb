<div class="flex-column" style="height:100vh;">

  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>

  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Patient's Details</h2>
          </div>
          <div>
            <h2> &#10145; ID: <%= @patient.id %> </h2>
            <h2> &#10145; Name: <%= @patient.name %> </h2>
            <h2> &#10145; Name: <%= @patient.age %> </h2>
            <h2> &#10145; Gender: <%= @patient.gender %> </h2>
            <h2> &#10145; Description: <%= @patient.description %> </h2>
          </div>
          <div class="d-flex">
            <%= button_to "Edit Patient" , edit_patient_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "Delete Patient", patient_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "View all Patients", patients_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>